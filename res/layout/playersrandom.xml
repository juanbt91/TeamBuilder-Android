<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="bottom|center|right"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >

    <TextView
        android:id="@+id/TextView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:gravity="center"
        android:text="Who&apos;s Playing?"
        android:textSize="35dp" />

    <Button
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:onClick="onButton1Click"
        android:text="Next" />

    <Button
        android:id="@+id/subPlayer"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/next"
        android:layout_alignRight="@+id/next"
        android:text="-1" />

    <Button
        android:id="@+id/addPlayer"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/subPlayer"
        android:layout_alignBottom="@+id/subPlayer"
        android:layout_alignLeft="@+id/next"
        android:text="+1" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/subPlayer"
        android:layout_below="@+id/TextView1"
        android:layout_centerHorizontal="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/player1"
                android:layout_width="275dp"
                android:layout_height="40dp"
                android:hint="@string/Player"
                android:singleLine="true" >

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/player2"
                android:layout_width="275dp"
                android:layout_height="40dp"
                android:hint="@string/Player"
                android:singleLine="true" />

            <EditText
                android:id="@+id/player3"
                android:layout_width="275dp"
                android:layout_height="40dp"
                android:hint="@string/Player"
                android:singleLine="true" />

            <EditText
                android:id="@+id/player4"
                android:layout_width="275dp"
                android:layout_height="40dp"
                android:hint="@string/Player"
                android:singleLine="true" />

            <EditText
                android:id="@+id/player5"
                android:layout_width="275dp"
                android:layout_height="40dp"
                android:hint="@string/Player"
                android:singleLine="true"
                android:visibility="gone" />

            <EditText
                android:id="@+id/player6"
                android:layout_width="275dp"
                android:layout_height="40dp"
                android:ems="10"
                android:hint="@string/Player"
                android:singleLine="true"
                android:visibility="gone" />

            <EditText
                android:id="@+id/player7"
                android:layout_width="275dp"
                android:layout_height="40dp"
                android:hint="@string/Player"
                android:singleLine="true"
                android:visibility="gone" />

            <EditText
                android:id="@+id/player8"
                android:layout_width="275dp"
                android:layout_height="40dp"
                android:hint="@string/Player"
                android:singleLine="true"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>